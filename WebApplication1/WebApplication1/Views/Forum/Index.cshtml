@{
    ViewData["Title"] = "Форум";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="~/css/site.css" />

<div class="container">
    <h1 class="title">💬 Форум спільноти</h1>

    <div class="input-section">
        <h2 style="color: var(--secondary); margin-bottom: 1.5rem;">Обговорення та спілкування</h2>

        <div style="text-align: center; margin-bottom: 2rem; padding: 1.5rem; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); border-radius: 15px; color: white;">
            <h3 style="margin-bottom: 0.5rem;">👋 Ласкаво просимо на форум!</h3>
            <p style="margin-bottom: 0; opacity: 0.9;">Ваш тип доступу: <strong>@ViewBag.AccessType</strong></p>
        </div>

        <div class="results-section">
            <div class="entity-card">
                <div class="entity-name">📢 Загальні обговорення</div>
                <div style="padding: 1rem;">
                    <ul style="text-align: left; color: var(--secondary);">
                        <li>Обговорення навчальних питань</li>
                        <li>Обмін досвідом</li>
                        <li>Питання та відповіді</li>
                        <li>Оголошення спільноти</li>
                    </ul>
                </div>
                <div style="text-align: right; margin-top: 1rem;">
                    <a href="@Url.Action("Discussions")" class="wiki-link">Перейти до обговорень →</a>
                </div>
            </div>

            <div class="entity-card">
                <div class="entity-name">📚 Тематичні розділи</div>
                <div style="padding: 1rem;">
                    <ul style="text-align: left; color: var(--secondary);">
                        <li>Програмування та технології</li>
                        <li>Математика та аналіз</li>
                        <li>Проектна діяльність</li>
                        <li>Кар'єра та розвиток</li>
                    </ul>
                </div>
                <div style="text-align: right; margin-top: 1rem;">
                    <a href="@Url.Action("Topics")" class="wiki-link">Перейти до тем →</a>
                </div>
            </div>

            @if (User.HasClaim(c => c.Type == "IsMentor" && c.Value == "true") ||
            User.HasClaim(c => c.Type == "HasForumAccess" && c.Value == "true"))
            {
                <div class="entity-card" style="border: 2px solid var(--accent);">
                    <div class="entity-name">⭐ Менторський розділ</div>
                    <div style="padding: 1rem;">
                        <ul style="text-align: left; color: var(--secondary);">
                            <li>Методичні матеріали</li>
                            <li>Обговорення викладачів</li>
                            <li>Педагогічний досвід</li>
                            <li>Координація навчання</li>
                        </ul>
                    </div>
                    <div style="text-align: right; margin-top: 1rem;">
                        <span class="wiki-link" style="color: var(--accent);">Ексклюзивний доступ</span>
                    </div>
                </div>
            }
        </div>

        <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 1rem; margin-top: 2rem;">
            <a href="@Url.Action("Discussions")" class="analyze-btn" style="text-decoration: none; display: flex; align-items: center; justify-content: center; gap: 0.5rem;">
                💬 Обговорення
            </a>
            <a href="@Url.Action("Topics")" class="analyze-btn" style="text-decoration: none; display: flex; align-items: center; justify-content: center; gap: 0.5rem;">
                📖 Теми
            </a>
            @if (User.HasClaim(c => c.Type == "IsMentor" && c.Value == "true") ||
            User.HasClaim(c => c.Type == "HasForumAccess" && c.Value == "true"))
            {
                <a href="@Url.Action("CreateTopic")" class="analyze-btn" style="text-decoration: none; display: flex; align-items: center; justify-content: center; gap: 0.5rem; background: linear-gradient(135deg, var(--accent), var(--secondary));">
                    ✍️ Створити тему
                </a>
            }
        </div>
    </div>

    <div style="margin-top: 2rem; padding: 1rem; background-color: #e3f2fd; border-radius: 8px; border-left: 4px solid #2196F3;">
        <p style="color: #1565C0; margin: 0; font-weight: 500;">
            ✅ Ви маєте доступ до форуму як: <strong>@ViewBag.AccessType</strong>
        </p>
        <p style="color: #1565C0; margin: 0.5rem 0 0 0; font-size: 0.9rem;">
            @GetAccessDescription()
        </p>
    </div>
</div>

@functions {
    string GetAccessDescription()
    {
        if (User.HasClaim(c => c.Type == "IsMentor" && c.Value == "true"))
            return "Ви можете створювати теми, моделювати обговорення та надавати експертні відповіді.";
        else if (User.HasClaim(c => c.Type == "IsVerifiedUser" && c.Value == "true"))
            return "Ви можете брати участь у всіх обговореннях та задавати питання.";
        else if (User.HasClaim(c => c.Type == "HasForumAccess" && c.Value == "true"))
            return "Ви маєте спеціальний доступ до розширених функцій форуму.";
        else
            return "Ви можете переглядати основні обговорення.";
    }
}