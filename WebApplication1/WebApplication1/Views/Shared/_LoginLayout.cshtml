<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Університет</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/entity-linking.css" asp-append-version="true" />
</head>
<body>
    <div class="login-page">
        <div class="login-container">
            <!-- Логотип або назва -->
            <div style="text-align: center; margin-bottom: 2rem;">
                <h1 style="color: var(--primary); margin: 0;">Університет</h1>
                <p style="color: var(--secondary); margin-top: 0.5rem;">Система управління навчанням</p>
            </div>
            
            <!-- Контент сторінки -->
            @RenderBody()
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>