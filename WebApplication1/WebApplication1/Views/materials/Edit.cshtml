@model WebApplication1Data.models.Material
@{
    ViewData["Title"] = "Редагування матеріалу";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="~/css/site.css" />
<!-- ДОДАЙТЕ ЦЕЙ БЛОК ДЛЯ ВІДОБРАЖЕННЯ ПОМИЛОК -->
@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        <h4>Помилки валідації:</h4>
        <div asp-validation-summary="All" class="text-danger"></div>
    </div>
}
<div class="container">
    <h1 class="title">✏️ Редагування матеріалу</h1>

    <div class="input-section">
        <h2 style="color: var(--secondary); margin-bottom: 1.5rem;">Редагування: @Model.Title</h2>

        <form asp-action="Edit" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="UploadedById" />

            <div class="form-group" style="margin-bottom: 1.5rem;">
                <label asp-for="Title" style="display: block; margin-bottom: 0.5rem; color: var(--secondary); font-weight: 600;">Назва матеріалу *</label>
                <input asp-for="Title" class="text-input" style="width: 100%;" placeholder="Введіть назву матеріалу" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="form-group" style="margin-bottom: 1.5rem;">
                <label asp-for="Description" style="display: block; margin-bottom: 0.5rem; color: var(--secondary); font-weight: 600;">Опис</label>
                <textarea asp-for="Description" class="text-input" style="width: 100%; height: 120px;" placeholder="Опишіть зміст матеріалу"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group" style="margin-bottom: 1.5rem;">
                <label asp-for="ContentUrl" style="display: block; margin-bottom: 0.5rem; color: var(--secondary); font-weight: 600;">Посилання на файл *</label>
                <input asp-for="ContentUrl" class="text-input" style="width: 100%;" placeholder="https://example.com/material.pdf" />
                <span asp-validation-for="ContentUrl" class="text-danger"></span>
                <small class="form-text text-muted">Введіть URL для завантаження файлу або посилання на ресурс</small>
            </div>

            <!-- Вибір курсу -->
            <div style="margin-bottom: 1.5rem;">
                <label asp-for="CourseId" class="entity-name" style="display: block; margin-bottom: 0.5rem;">Курс *</label>
                <select asp-for="CourseId" class="text-input" required>
                    <option value="">Оберіть курс</option>
                    @if (ViewBag.CourseList != null)
                    {
                        foreach (var course in ViewBag.CourseList)
                        {
                            <option value="@course.Value">@course.Text</option>
                        }
                    }
                </select>
                <span asp-validation-for="CourseId" style="color: #FF6B6B; font-size: 0.9rem;"></span>
            </div>

            <div style="display: flex; gap: 1rem; margin-top: 2rem;">
                <button type="submit" class="analyze-btn">💾 Зберегти зміни</button>
                <a href="@Url.Action("Index")" class="analyze-btn" style="background: var(--secondary); text-decoration: none; display: inline-flex; align-items: center; justify-content: center;">← Назад до списку</a>
            </div>
        </form>
    </div>

    <div style="margin-top: 2rem; padding: 1rem; background-color: #e8f5e8; border-radius: 8px; border-left: 4px solid #4CAF50;">
        <p style="color: #2E7D32; margin: 0; font-weight: 500;">
            ✅ Ви маєте право редагувати цей матеріал, оскільки ви є його автором
        </p>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(document).ready(function () {
            // Автоматично вибираємо поточний курс у випадаючому списку
            var currentCourseId = @Model.CourseId;
            if (currentCourseId > 0) {
                $('#CourseId').val(currentCourseId);
            }
        });
    </script>
}