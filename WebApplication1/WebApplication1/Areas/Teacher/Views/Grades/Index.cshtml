@model IEnumerable<WebApplication1Data.models.Grade>
@{
    ViewData["Title"] = "Оцінки";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/css/site.css" />

<div class="container">
    <h1 class="title">Оцінки</h1>

    <div class="input-section">
        <h2 style="color: var(--secondary); margin-bottom: 1.5rem;">Управління оцінками</h2>

        <a href="/Teacher/Grades/Create" class="analyze-btn" style="text-decoration: none; display: inline-block; margin: 0;">
            ➕ Виставити оцінку
        </a>
    </div>

    <!-- Фільтр по курсах -->
    <div class="input-section">
        <h2 style="color: var(--secondary); margin-bottom: 1.5rem;">Фільтрація</h2>

        <form method="get" style="display: flex; gap: 1rem; align-items: end;">
            <div style="flex: 1;">
                <label style="display: block; margin-bottom: 0.5rem; font-weight: 500;">Курс</label>
                <select name="courseId" class="text-input" style="padding: 0.75rem;">
                    <option value="">Всі курси</option>
                    @if (ViewBag.Courses != null)
                    {
                        foreach (var item in ViewBag.Courses)
                        {
                            if (item.Value == ViewBag.SelectedCourseId?.ToString())
                            {
                                <option value="@item.Value" selected>@item.Text</option>
                            }
                            else
                            {
                                <option value="@item.Value">@item.Text</option>
                            }
                        }
                    }
                </select>
            </div>
            <button type="submit" class="analyze-btn" style="border: none; cursor: pointer; height: fit-content;">
                🔍 Застосувати
            </button>
            <a href="/Teacher/Grades" class="analyze-btn"
               style="flex: 1; min-width: 120px; text-align: center; background-color: #DC3545; border: none; padding: 0.5rem 1rem; text-decoration: none;">
                ❌ Очистити
            </a>
        </form>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div style="background-color: #D4EDDA; color: #155724; padding: 10px; border-radius: 5px; margin-bottom: 1rem;">
            @TempData["SuccessMessage"]
        </div>
    }

    <div class="results-section">
        @if (Model.Any())
        {
            @foreach (var item in Model)
            {
                <div class="entity-card">
                    <div class="entity-name">
                        🎓 @item.Student?.User?.LastName @item.Student?.User?.FirstName - @item.Course?.Title
                    </div>

                    <div style="color: var(--secondary); margin-top: 0.5rem; font-size: 0.9rem;">
                        📅 @item.DateSet.ToString("dd.MM.yyyy") | 👥 @item.Course?.GroupName
                    </div>

                    <!-- Основні кнопки дій -->
                    <div style="display: flex; gap: 0.5rem; margin-top: 1rem; flex-wrap: wrap;">
                        <!-- Прості HTML посилання -->
                        <a href="/Teacher/Grades/Edit/@item.Id"
                           class="analyze-btn"
                           style="flex: 1; min-width: 120px; text-align: center; background-color: #FFC107; border: none; padding: 0.5rem 1rem; text-decoration: none;">
                            ✏️ Редагувати
                        </a>

                        <a href="/Teacher/Grades/Details/@item.Id"
                           class="analyze-btn"
                           style="flex: 1; min-width: 120px; text-align: center; background-color: var(--secondary); border: none; padding: 0.5rem 1rem; text-decoration: none;">
                            👁️ Деталі
                        </a>

                        <a href="/Teacher/Grades/Delete/@item.Id"
                           class="analyze-btn"
                           style="flex: 1; min-width: 120px; text-align: center; background-color: #DC3545; border: none; padding: 0.5rem 1rem; text-decoration: none;">
                            🗑️ Видалити
                        </a>
                    </div>

                    <!-- Відображення оцінки -->
                    <div style="text-align: center; margin-top: 1rem;">
                        <span style="font-size: 2rem; font-weight: bold; color: var(--primary);">
                            @item.Value
                        </span>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="no-results">
                <div style="text-align: center; padding: 2rem;">
                    <div style="font-size: 3rem; margin-bottom: 1rem;">📊</div>
                    <h3 style="color: var(--secondary); margin-bottom: 1rem;">
                        @(ViewBag.SelectedCourseId != null ? "Немає оцінок для обраного курсу" : "Оцінок поки що немає")
                    </h3>
                    <p style="color: var(--secondary); margin-bottom: 1.5rem;">
                        @(ViewBag.SelectedCourseId != null ? "Виставіть першу оцінку для цього курсу" : "Виставіть першу оцінку, щоб почати роботу")
                    </p>
                    <a href="/Teacher/Grades/Create" class="analyze-btn" style="text-decoration: none; display: inline-block;">
                        ➕ Виставити оцінку
                    </a>
                </div>
            </div>
        }
    </div>
</div>