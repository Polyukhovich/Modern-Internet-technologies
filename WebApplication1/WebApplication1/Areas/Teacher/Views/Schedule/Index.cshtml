@{
    ViewData["Title"] = "Мій розклад";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var scheduleByDay = ViewBag.ScheduleByDay as Dictionary<DayOfWeek, List<WebApplication1Data.models.ScheduleItem>>;
}

<link rel="stylesheet" href="~/css/site.css" />

<div class="container">
    <h1 class="title">Мій розклад</h1>

    <!-- Статистика розкладу -->
    <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 1.5rem; margin-bottom: 2rem;">
        <div class="entity-card" style="background: linear-gradient(135deg, var(--secondary), var(--primary)); color: white; text-align: center;">
            <div class="entity-name" style="color: white;">📅 Всього занять</div>
            <div style="font-size: 2.5rem; font-weight: bold;">@ViewBag.TotalScheduleItems</div>
        </div>
        <div class="entity-card" style="background: linear-gradient(135deg, #5C6B73, #2A2B2E); color: white; text-align: center;">
            <div class="entity-name" style="color: white;">🎯 Днів на тиждень</div>
            <div style="font-size: 2.5rem; font-weight: bold;">@ViewBag.DaysWithClasses</div>
        </div>
        <div class="entity-card" style="background: linear-gradient(135deg, #C2D3CD, #5C6B73); color: white; text-align: center;">
            <div class="entity-name" style="color: white;">📚 Курсів</div>
            <div style="font-size: 2.5rem; font-weight: bold;">@ViewBag.CoursesCount</div>
        </div>
    </div>

    <div class="input-section">
        <h2 style="color: var(--secondary); margin-bottom: 1.5rem;">Розклад занять</h2>

        <div class="results-section">
            @if (scheduleByDay != null && scheduleByDay.Count > 0)
            {
                <!-- Понеділок -->
                @if (scheduleByDay.ContainsKey(DayOfWeek.Monday) && scheduleByDay[DayOfWeek.Monday].Any())
                {
                    <div class="entity-card">
                        <div class="entity-name">Понеділок</div>
                        <div style="margin: 1rem 0;">
                            @foreach (var item in scheduleByDay[DayOfWeek.Monday])
                            {
                                <div style="display: flex; justify-content: space-between; padding: 0.75rem 0; border-bottom: 1px solid var(--accent);">
                                    <div style="font-weight: 500;">@item.Course?.Title</div>
                                    <div>@item.StartTime.ToString(@"hh\:mm") - @item.EndTime.ToString(@"hh\:mm")</div>
                                    <div style="color: var(--secondary);">@item.Room</div>
                                    <div style="color: var(--accent); font-size: 0.9rem;">@item.GroupName</div>
                                </div>
                            }
                        </div>
                    </div>
                }

                <!-- Вівторок -->
                @if (scheduleByDay.ContainsKey(DayOfWeek.Tuesday) && scheduleByDay[DayOfWeek.Tuesday].Any())
                {
                    <div class="entity-card">
                        <div class="entity-name">Вівторок</div>
                        <div style="margin: 1rem 0;">
                            @foreach (var item in scheduleByDay[DayOfWeek.Tuesday])
                            {
                                <div style="display: flex; justify-content: space-between; padding: 0.75rem 0; border-bottom: 1px solid var(--accent);">
                                    <div style="font-weight: 500;">@item.Course?.Title</div>
                                    <div>@item.StartTime.ToString(@"hh\:mm") - @item.EndTime.ToString(@"hh\:mm")</div>
                                    <div style="color: var(--secondary);">@item.Room</div>
                                    <div style="color: var(--accent); font-size: 0.9rem;">@item.GroupName</div>
                                </div>
                            }
                        </div>
                    </div>
                }

                <!-- Середа -->
                @if (scheduleByDay.ContainsKey(DayOfWeek.Wednesday) && scheduleByDay[DayOfWeek.Wednesday].Any())
                {
                    <div class="entity-card">
                        <div class="entity-name">Середа</div>
                        <div style="margin: 1rem 0;">
                            @foreach (var item in scheduleByDay[DayOfWeek.Wednesday])
                            {
                                <div style="display: flex; justify-content: space-between; padding: 0.75rem 0; border-bottom: 1px solid var(--accent);">
                                    <div style="font-weight: 500;">@item.Course?.Title</div>
                                    <div>@item.StartTime.ToString(@"hh\:mm") - @item.EndTime.ToString(@"hh\:mm")</div>
                                    <div style="color: var(--secondary);">@item.Room</div>
                                    <div style="color: var(--accent); font-size: 0.9rem;">@item.GroupName</div>
                                </div>
                            }
                        </div>
                    </div>
                }

                <!-- Четвер -->
                @if (scheduleByDay.ContainsKey(DayOfWeek.Thursday) && scheduleByDay[DayOfWeek.Thursday].Any())
                {
                    <div class="entity-card">
                        <div class="entity-name">Четвер</div>
                        <div style="margin: 1rem 0;">
                            @foreach (var item in scheduleByDay[DayOfWeek.Thursday])
                            {
                                <div style="display: flex; justify-content: space-between; padding: 0.75rem 0; border-bottom: 1px solid var(--accent);">
                                    <div style="font-weight: 500;">@item.Course?.Title</div>
                                    <div>@item.StartTime.ToString(@"hh\:mm") - @item.EndTime.ToString(@"hh\:mm")</div>
                                    <div style="color: var(--secondary);">@item.Room</div>
                                    <div style="color: var(--accent); font-size: 0.9rem;">@item.GroupName</div>
                                </div>
                            }
                        </div>
                    </div>
                }

                <!-- П'ятниця -->
                @if (scheduleByDay.ContainsKey(DayOfWeek.Friday) && scheduleByDay[DayOfWeek.Friday].Any())
                {
                    <div class="entity-card">
                        <div class="entity-name">П'ятниця</div>
                        <div style="margin: 1rem 0;">
                            @foreach (var item in scheduleByDay[DayOfWeek.Friday])
                            {
                                <div style="display: flex; justify-content: space-between; padding: 0.75rem 0; border-bottom: 1px solid var(--accent);">
                                    <div style="font-weight: 500;">@item.Course?.Title</div>
                                    <div>@item.StartTime.ToString(@"hh\:mm") - @item.EndTime.ToString(@"hh\:mm")</div>
                                    <div style="color: var(--secondary);">@item.Room</div>
                                    <div style="color: var(--accent); font-size: 0.9rem;">@item.GroupName</div>
                                </div>
                            }
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="no-results">
                    <div style="text-align: center; padding: 2rem;">
                        <div style="font-size: 3rem; margin-bottom: 1rem;">📅</div>
                        <h3 style="color: var(--secondary); margin-bottom: 1rem;">Розклад поки що відсутній</h3>
                        <p style="color: var(--secondary); margin-bottom: 1.5rem;">Додайте заняття до ваших курсів, щоб вони з'явились у розкладі</p>
                    </div>
                </div>
            }
        </div>
    </div>
</div>